---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import Experience from "../../components/Experience.astro";
import Project from "../../components/Project.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../../i18n/utils";
import { languagesList } from "../../i18n/ui";
import Logo from "../../assets/Logo.png";
import Image from "astro/components/Image.astro";

const currentLang = Astro.currentLocale || "es";

const translatedLabels = useTranslations(
  currentLang as keyof typeof languagesList,
);
---

<Layout>
  <header
    class="flex flex-col md:grid md:grid-cols-2 items-center font-Manrope md:mt-24 mt-12 "
    id="Header"
  >
    <section class="flex flex-col">
      <p class="">{translatedLabels("header.p1")}</p>
      <h1 class="text-Purple font-bold text-4xl">Juan Pablo</h1>
      <p>{translatedLabels("header.p2")}</p>
      <p>{translatedLabels("header.p3")}</p>

      <div class="mt-8 flex gap-2 items-center">
        <button
          class="flex gap-2 items-center bg-Purple rounded-lg text-white py-1 px-2 hover:bg-DarkPurple hover:duration-300 cursor-pointer hover:scale-95"
          ><i class="fa-solid fa-download"></i>{
            translatedLabels("header.cta")
          }</button
        >

        <div class="text-2xl flex gap-4">
          <a
            href="#"
            class="fa-brands fa-x-twitter"
            target="_blank"
            rel="noopener"></a>
          <a
            href="https://github.com/JPBuildsCode"
            class="fa-brands fa-github"
            target="_blank"
            rel="noopener"></a>
          <a
            href="https://www.linkedin.com/in/jpbuildscode/"
            class="fa-brands fa-linkedin"
            target="_blank"
            rel="noopener"></a>
        </div>
      </div>
    </section>
    <section class="justify-end items-center hidden md:flex">
      <Image
        src={Logo}
        alt="Logo animado"
        loading="eager"
        class="rounded-full w-1/3"
      />
    </section>
  </header>

  <section class="mt-8" id="Services">
    <h2 class="font-bold text-2xl flex gap-2 items-center">
      <i class="fa-solid fa-arrow-right"></i>{
        translatedLabels("services.title")
      }
    </h2>

    <div class="flex flex-col font-Manrope mt-2 md:grid grid-cols-2 md:gap-2 gap-4">
      <Container>
        <p class="flex gap-2 items-center text-lg font-bold mb-4 underline">
          <i class="fa-solid fa-palette"></i>{
            translatedLabels("services.title-design")
          }
        </p>
        <ul>
          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.design-service1-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.design-service1-description")}
          </li>

          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.design-service2-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.design-service2-description")}
          </li>

          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.design-service3-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.design-service3-description")}
          </li>

          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.design-service4-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.design-service4-description")}
          </li>
        </ul>
      </Container>

      <Container>
        <p class="flex gap-2 items-center text-lg font-bold mb-4 underline">
          <i class="fa-solid fa-laptop"></i>{
            translatedLabels("services.title-software")
          }
        </p>
        <ul>
          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.software-service1-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.software-service1-description")}
          </li>

          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.software-service2-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.software-service2-description")}
          </li>

          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.software-service3-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.software-service3-description")}
          </li>

          <li class="font-bold list-disc ml-5">
            {translatedLabels("services.software-service4-title")}
          </li>
          <li class="text-Gray">
            {translatedLabels("services.software-service4-description")}
          </li>
        </ul>
      </Container>
    </div>
  </section>

  <section class="mt-8" id="Experience">
    <h3 class="font-bold text-2xl flex gap-2 items-center">
      <i class="fa-solid fa-arrow-right"></i>{
        translatedLabels("experience.title")
      }
    </h3>

    <div class="flex flex-col md:grid grid-cols-3 gap-2 font-Manrope mt-2">
      <Experience
        p1={translatedLabels("experience.1.date")}
        p2={translatedLabels("experience.1.place")}
        p3={translatedLabels("experience.1.description")}
      />
      <Experience
        p1={translatedLabels("experience.2.date")}
        p2={translatedLabels("experience.2.place")}
        p3={translatedLabels("experience.2.description")}
      />
      <Experience
        p1={translatedLabels("experience.3.date")}
        p2={translatedLabels("experience.3.place")}
        p3={translatedLabels("experience.3.description")}
      />
    </div>
  </section>

  <section class="mt-8">
    <h4 class="font-bold text-2xl flex gap-2 items-center">
      <i class="fa-solid fa-arrow-right"></i>{
        translatedLabels("knowledge.title")
      }
    </h4>

    <div class="flex flex-col md:grid grid-cols-2 gap-2 mt-2">
      <Container>
        <p class="text-lg font-bold">
          {translatedLabels("knowledge.design.title")}
        </p>
        <article class="grid grid-cols-2 items-center justify-center">
          <div class="flex flex-col items-center justify-center">
            <img
              loading="lazy"
              src="/ICONS/Design/Photoshop.svg"
              alt="Photoshop ICON"
              class="size-12 lg:size-max"
            />
            <p>Photoshop</p>
          </div>

          <div class="flex flex-col items-center justify-center">
            <img
              loading="lazy"
              src="/ICONS/Design/Figma.svg"
              alt="Figma ICON"
              class="size-12 lg:size-max"
            />
            <p>Figma</p>
          </div>
        </article>
      </Container>

      <Container>
        <p class="text-lg font-bold">
          {translatedLabels("knowledge.code.title")}
        </p>
        <article
          class="grid grid-cols-3 items-center justify-center gap-4"
        >
          <div class="flex flex-col items-center justify-center">
            <img loading="lazy" src="/ICONS/Code/Astro.svg" alt="Astro ICON" class="size-12 lg:size-max" />
            <p>Astro</p>
          </div>

          <div class="flex flex-col items-center justify-center">
            <img
              loading="lazy"
              src="/ICONS/Code/JS.svg"
              alt="JavaScript ICON" class="size-12 lg:size-max"
            />
            <p>Javascript</p>
          </div>

          <div class="flex flex-col items-center justify-center">
            <img
              loading="lazy"
              src="/ICONS/Code/Tailwindcss.svg"
              alt="Tailwindcss ICON" class="size-12 lg:size-max"
            />
            <p>Tailwind CSS</p>
          </div>

          <div class="flex flex-col items-center justify-center">
            <img loading="lazy" src="/ICONS/Code/React.svg" alt="React ICON" class="size-12 lg:size-max" />
            <p>React</p>
          </div>

          <div class="flex flex-col items-center justify-center">
            <img loading="lazy" src="/ICONS/Code/Github.svg" alt="React ICON" class="size-12 lg:size-max" />
            <p>Github</p>
          </div>
        </article>
      </Container>
    </div>
  </section>

  <section class="mt-8" id="Projects">
    <div class="flex justify-between">
      <h5 class="font-bold text-2xl flex gap-2 items-center">
        <i class="fa-solid fa-arrow-right"></i>{
          translatedLabels("projects.title")
        }
      </h5>

      <a
        class="bg-Purple text-white p-2 rounded-lg hover:bg-DarkPurple hover:duration-300 hover:scale-95"
        href={getRelativeLocaleUrl(currentLang, "/projects")}
        ><i class="fa-solid fa-plus"></i> {translatedLabels("projects.more")}</a
      >
    </div>

    <div class="flex flex-col mt-2 md:grid lg:grid-cols-3 md:grid-cols-2 gap-8">
      <Project
        title="Con-siente CoWorking"
        src="/IMGS/Projects/Consiente.webp"
        description={translatedLabels("projects.1.description")}
        code="https://github.com/JPBuildsCode/Con-siente-Coworking"
        preview="https://consiente-coworking.vercel.app/"
        ><div class="flex w-full justify-center gap-8 my-4">
          <img
            loading="lazy"
            src="/ICONS/Code/Tailwindcss.svg"
            alt="Icon TailwindCSS"
            class="size-12"
            title="Icon TailwindCSS"
          />
          <img
            loading="lazy"
            src="/ICONS/Code/Astro.svg"
            alt="Icon Astro"
            class="size-12"
            title="Icon Astro"
          />
        </div>
      </Project>

      <Project
        title="CTP Santo Domingo"
        alt="CTP Santo Domingo"
        src="/IMGS/Projects/CTPSD.webp"
        description={translatedLabels("projects.2.description")}
        code="https://github.com/JPBuildsCode/ctp-santodomingo"
        preview="https://ctp-santodomingo.vercel.app/"
        ><div class="flex w-full justify-center gap-8 my-4">
          <img
            loading="lazy"
            src="/ICONS/Code/Tailwindcss.svg"
            alt="Icon TailwindCSS"
            class="size-12"
            title="Icon TailwindCSS"
          />
          <img
            loading="lazy"
            src="/ICONS/Code/React.svg"
            alt="Icon Astro"
            class="size-12"
            title="Icon Astro"
          />
        </div></Project
      >

      <Project
        title="Dela Flowers"
        alt="Dela Flowers"
        src="/IMGS/Projects/Dela-Flowers.webp"
        description={translatedLabels("projects.3.description")}
        code="https://github.com/JPBuildsCode/Dela-Flowers"
        preview="https://dela-flowers.vercel.app/"
        ><div class="flex w-full justify-center gap-8 my-4">
          <img
            loading="lazy"
            src="/ICONS/Code/SASS.svg"
            alt="Icon SASS"
            class="size-12"
            title="Icon SASS"
          />
          <img
            loading="lazy"
            src="/ICONS/Code/Astro.svg"
            alt="Icon Astro"
            class="size-12"
            title="Icon Astro"
          />
        </div></Project
      >

      <Project
        title="Spooky Fest"
        alt="Spooky Fest"
        src="/IMGS/Projects/Spooky-Fest.webp"
        description={translatedLabels("projects.4.description")}
        code="https://github.com/JPBuildsCode/Halloween-Festival"
        preview="https://spookyfest.vercel.app/"
        ><div class="flex w-full justify-center gap-8 my-4">
          <img
            loading="lazy"
            src="/ICONS/Code/SASS.svg"
            alt="Icon SASS"
            class="size-12"
            title="Icon SASS"
          />
          <img
            loading="lazy"
            src="/ICONS/Code/Astro.svg"
            alt="Icon Astro"
            class="size-12"
            title="Icon Astro"
          />
        </div></Project
      >
    </div>
  </section>

  <section class="mt-8">
    <div class="flex flex-col md:grid grid-cols-2 gap-8 font-Manrope">
      <div>
        <h6 class="text-xl font-bold">{translatedLabels("contactme.title")}</h6>
        <p class="text-lg">
          {translatedLabels("contactme.p1")}
          <span class="text-Purple font-bold"
            >{translatedLabels("contactme.p1.span")}</span
          >
        </p>
        <p>{translatedLabels("contactme.p2")}</p>
      </div>

      <form action="submit" class="flex flex-col gap-2">
        <div class="flex flex-col">
          <label for="Nombre">Nombre</label>
          <div
            class="bg-DarkPurple rounded-lg p-2 text-white flex gap-2 items-center"
          >
            <i class="fa-solid fa-user"></i>
            <input
              type="text"
              name="Nombre"
              id="Nombre"
              class="bg-transparent outline-none w-full"
            />
          </div>
        </div>

        <div class="flex flex-col">
          <label for="Correo">{translatedLabels("contactme.form.correo")}</label
          >
          <div
            class="bg-DarkPurple rounded-lg p-2 text-white flex gap-2 items-center"
          >
            <i class="fa-solid fa-envelope"></i>
            <input
              type="text"
              name="Correo"
              id="Correo"
              class="bg-transparent outline-none w-full"
            />
          </div>
        </div>

        <div class="flex flex-col">
          <label for="Asunto">{translatedLabels("contactme.form.asunto")}</label
          >
          <div
            class="bg-DarkPurple rounded-lg p-2 text-white flex gap-2 items-center"
          >
            <i class="fa-solid fa-tag"></i>
            <input
              type="text"
              name="Asunto"
              id="Asunto"
              class="bg-transparent outline-none w-full"
            />
          </div>
        </div>
        <div class="flex flex-col">
          <label for="Mensaje"
            >{translatedLabels("contactme.form.mensaje")}</label
          >
          <div
            class="bg-DarkPurple rounded-lg p-2 text-white flex gap-2 items-center"
          >
            <i class="fa-solid fa-message"></i>
            <input
              type="text"
              name="Mensaje"
              id="Mensaje"
              class="bg-transparent outline-none w-full"
            />
          </div>
        </div>

        <div class="flex justify-end">
          <button
            class="bg-Purple p-2 rounded-lg flex items-center gap-2 justify-center w-max text-white"
            ><i class="fa-solid fa-paper-plane"></i> Enviar</button
          >
        </div>
      </form>
    </div>
  </section>
</Layout>
